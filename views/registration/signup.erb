<h1>This is the signup</h1>

<form action="/registration" method="post" role="form">
 <div class="form-group">
   <label for="user_username">username:</label>
   <br>
   <input id="user_username" class="form-control" name="user[username]" type="text" style="width=90%"/>
 </div>
 <div class="form-group">
   <label for="user_email">email:</label>
   <br>
   <input id="user_email" class="form-control" name="user[email]" type="text"style="width=90%"/>
 </div>
 <div class="form-group">
   <label for="user_password">password:</label>
   <br>
   <input id="user_password" class="form-control" name="user[password]" type="text"style="width=90%"/>
 </div>
 <button type="submit" class="btn btn-success">Submit</button>
</form>
